<Window x:Class="PLWPF.HostingUnitWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="HostingUnit" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="40" FontWeight="Bold" >
                <TextBlock.TextDecorations>
                    <TextDecoration/>
                </TextBlock.TextDecorations>
            </TextBlock>
            <TextBlock Text="please select your option:" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="30"/>
        </StackPanel>

        <Button x:Name="SelectAddHostingUnit" Grid.Row="1" Content="AddHostingUnit" Click="AddHostingUnitButtonClick" FontSize="22"/>
        <Button x:Name="SelectPrivateArea" Grid.Row="2" Content="PrivateArea" Click="PrivateAreaButtonClick" FontSize="22"/>
        
    </Grid>
</Window>
