<Window x:Class="PLWPF.GuestRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="GuestRequestWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="fontStyle" TargetType="Control">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="myLabelStyle"  TargetType="Label" BasedOn="{StaticResource fontStyle}"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Welcome to the system. would you like to send a guest Request?" Grid.Row="0" Margin="3" Style="{StaticResource myLabelStyle}"/>
        <Button x:Name="addGuestRequestButton" Content="Add a guestRequest" Click="addGuestRequestButton_Click"
    </Grid>
</Window>
