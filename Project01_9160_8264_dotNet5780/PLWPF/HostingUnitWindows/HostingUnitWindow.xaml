<Window x:Class="PLWPF.HostingUnitWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLWPF"
      mc:Ignorable="d" FontSize="18" FontFamily="Bookman Old Style" 
      d:DesignHeight="550" d:DesignWidth="500"
      Title="HostingUnitWindow">

    <Grid Background="DarkCyan">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="HostingUnit:" Grid.Column="2" Grid.Row="1" FontSize="40" FontWeight="Bold" Margin="3">
            <TextBlock.TextDecorations>
                <TextDecoration/>
            </TextBlock.TextDecorations>
        </TextBlock>
        <TextBlock Text="please select your option:" Grid.Column="2" Grid.Row="2" Margin="3"/>

        <Image Source="\Images\HotelBuildingImage.jpg" Grid.Row="3" Grid.Column="2" Margin="3" MaxHeight="200"/>

        <Button x:Name="SelectAddHostingUnit" Grid.Row="4" Grid.Column="2" Content="AddHostingUnit"
                Margin="3" Foreground="Maroon" Height="50" Background="Beige" Click="AddHostingUnitButtonClick"/>

        <Button x:Name="SelectPrivateArea" Grid.Row="5" Grid.Column="2" Content="PrivateArea" Click="PrivateAreaButtonClick"
                Foreground="Maroon" Margin="3" Height="50" Background="Beige"/>

        <Grid Grid.Column="2" Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="LogOff" Content="Log Off"  Margin="3,3,3,0" Background="Black" Foreground="Green" Grid.Column="3" Click="LogOff_Click"/>
        </Grid>
    </Grid>
</Window>
